extends ../layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/forms.css")

block content 
    h1 Reset Password
    if errorMessage
        div.message.error-message #{errorMessage}
    form.form(action="/reset", method="POST")
        div.form-control 
            label(for="email") Email 
            input(class=`${validationErrors.find(error => error.param === "email") ? "invalid" : ""}`, type="email" name="email" id="email", value=`${oldInput.email}`) 
        input(type="hidden", name="_csrf", value=`${csrfToken}`)
        button.btn(type="submit") Reset Password