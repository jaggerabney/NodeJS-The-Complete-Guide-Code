extends ../layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/forms.css")

block content 
    if errorMessage
        div.message.error-message #{errorMessage}
    form.form(action="/new-password", method="POST")
        div.form-control 
            label(for="newPassword") New Password 
            input(type="newPassword" name="newPassword" id="newPassword") 
        div.form-control 
            label(for="confirmNewPassword") Confirm New Password 
            input(type="confirmNewPassword" name="confirmNewPassword" id="confirmNewPassword") 
        input(type="hidden", name="_csrf", value=`${csrfToken}`)
        input(type="hidden", name="userId", value=`${userId}`)
        input(type="hidden", name="passwordToken", value=`${passwordToken}`)
        button.btn(type="submit") Change Password