extends ../layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/forms.css")

block content 
    h1 Signup
    if errorMessage
        div.message.error-message #{errorMessage}
    form.form(action="/signup", method="POST" novalidate)
        div.form-control 
            label(for="email") Email 
            input(class=`${validationErrors.find(error => error.param === "email") ? "invalid" : ""}`, type="email", name="email", id="email", value=`${oldInput.email}`)  
        div.form-control 
            label(for="password") Password 
            input(class=`${validationErrors.find(error => error.param === "password" || error.param === "confirmPassword") ? "invalid" : ""}`, type="password", name="password", id="password", value=`${oldInput.password}`)  
        div.form-control 
            label(for="confirmPassword") Confirm Password 
            input(class=`${validationErrors.find(error => error.param === "password" || error.param === "confirmPassword") ? "invalid" : ""}`, type="password", name="confirmPassword", id="confirmPassword", value=`${oldInput.confirmPassword}`) 
        input(type="hidden", name="_csrf", value=`${csrfToken}`)
        button.btn(type="submit") Signup